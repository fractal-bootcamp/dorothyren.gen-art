generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Art {
  id          String   @id @default(cuid())
  // artParams   String?
  bgColor     String
  createdAt   DateTime @default(now())
  user        Users    @relation(fields: [userId], references: [id])
  updatedAt   DateTime @default(now())
  isPublished Boolean

  //relations
  userId String
}

model Users {
  id        String   @id @default(cuid())
  email     String   @unique
  authId    String
  createdAt DateTime
  updatedAt DateTime
  avatarUrl String?

  //relations
  Art Art[]
}
